{
	"arrowParens": "avoid",
	"htmlWhitespaceSensitivity": "css",
	"objectWrap": "collapse",
	"proseWrap": "always",
	"quoteProps": "as-needed",
	"semi": true,
	"singleQuote": false,
	"tabWidth": 3,
	"trailingComma": "all",
	"useTabs": true,

	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{ "files": "*.md", "options": { "useTabs": false, "tabWidth": 2 } },
		{ "files": "*.svelte", "options": { "parser": "svelte" } }
	]
}
