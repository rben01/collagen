{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": false,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"baseUrl": ".",
		"paths": { "@/*": ["src/*"], "@collagen/*": ["src/lib/collagen-ts/*"] },
		"lib": ["ES2020", "ESNext", "DOM", "DOM.Iterable"],
		"types": ["node"],
		"noEmit": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*",
		"public/sjsonnet.js",
		"test/**/*.spec.ts",
		"playwright.config.ts"
	],
	"exclude": ["node_modules", "dist", "public"]
}
