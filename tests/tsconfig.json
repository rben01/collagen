{
	"compilerOptions": {
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": false,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable",
			"ES2015.Promise",
			"ES2017.Object"
		],
		"types": ["node", "@playwright/test"],
		"noEmit": true,
		"allowJs": true,
		"resolveJsonModule": true
	},
	"include": ["**/*.ts", "**/*.js", "globals.d.ts"],
	"exclude": ["node_modules"]
}
