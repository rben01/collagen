{
	"name": "svelte-app",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"dev": "vite",
		"preview": "vite preview",
		"start": "vite build && vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:unit": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:unit:run": "vitest run",
		"test:e2e": "npx playwright install && playwright test",
		"//test:e2e:run": "echo 'runs playwright tests without opening the reporter at the end'",
		"test:e2e:run": "PW_TEST_HTML_REPORT_OPEN='never' npm run test:e2e",
		"//test:e2e:run:chromium": "echo 'runs playwright tests without opening the reporter at the end, only testing chromium'",
		"test:e2e:run:chromium": "npm run test:e2e:run -- -- --project=chromium",
		"test:e2e:ui": "npm run test:e2e -- --ui",
		"test:e2e:debug": "npm run test:e2e -- --debug",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@lezer/generator": "^1.8.0",
		"@playwright/test": "^1.54.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^24.3.0",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.38",
		"svelte-check": "^4.0.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-commonjs": "^0.10.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "1.1.0"
	},
	"dependencies": {
		"@codemirror/commands": "^6.8.1",
		"@codemirror/language": "^6.11.3",
		"@codemirror/view": "^6.38.2",
		"@tabler/icons": "^3.35.0",
		"codemirror": "^6.0.2",
		"svelte-codemirror-editor": "^2.0.0"
	}
}
